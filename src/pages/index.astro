---
import { getCollection } from "astro:content";
import { siteConfig } from "../config/site-config";
import MainLayout from "@layout/MainLayout.astro";
import TypeBlogPost from "@components/TypeBlogPost.astro";

const blogPosts = await getCollection(
	"blog",
	(post) => post.data.isDraft === false,
);
---

<MainLayout title="STBN || Mi blog">
	<!-- component -->
	<section class="bg-gray-900">
		<div class="container px-6 py-10 mx-auto">
			<h1
				class="text-3xl font-semibold text-gray-300 capitalize lg:text-4xl dark:text-white"
			>
				{siteConfig.title}
			</h1>

			<a class="mr-2" href="/blog/1">Blog paginado</a>
			<a class="mr-2" href="/authors">Autores</a>

			<div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
				{blogPosts.map((post) => <TypeBlogPost post={post} />)}
			</div>
		</div>
	</section>
</MainLayout>

<style>
	@reference "src/styles/global.css";
	a {
		@apply text-blue-500 hover:underline;
	}
</style>
