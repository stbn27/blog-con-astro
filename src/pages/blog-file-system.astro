---
import MainLayout from "@layout/MainLayout.astro";
import CardPost from "src/components/CardPost.astro";

const posts = await Astro.glob("./posts-old/*{.md, .mdx}");
console.log(posts);
---

<MainLayout title="STBN | Mi Blog">
	<section class="bg-white dark:bg-gray-900">
		<div class="container px-6 py-10 mx-auto">
			<h1
				class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white"
			>
				Mis Blogs
			</h1>

			<div
				class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2 lg:grid-cols-3"
			>
				{posts.map((post) => <CardPost {...post} />)}
			</div>
		</div>
	</section>
</MainLayout>
